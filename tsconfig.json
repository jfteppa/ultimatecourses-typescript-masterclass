{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es6", "dom"],
    "module": "commonjs",
    "outDir": "dist",
    "pretty": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    // "noEmitHelpers": true, // no need if we import the helpers
    // npm install tslib --save and then we can just importHelpers
    "importHelpers": true
  }
}
